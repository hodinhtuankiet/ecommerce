                    "",
                    "if (deviceId) {",
                    "    pm.request.headers.add({",
                    "        key: 'device-id',",
                    "        value: deviceId",
                    "    });",
                    "} else {",
                    "    console.log('No device ID found in collection variables');",
                    "}"
                ]
            }
